# Server 1 (required)
LOGS_HOST_PATH_1=/var/lib/pterodactyl/volumes/<server-1-uuid>/profiles
WEBHOOK_URL_1=https://your-webhook.example/path-1
SOURCE_NAME_1=cherno
CHECK_INTERVAL_1=30
# Quiet hours format: HH-HH (e.g. 1-6), leave empty to disable
QUIET_HOURS_RANGE_1=1-6
# Send include filter format: group1+group1word2,group2word (OR between groups, + means AND)
# Matching is done across the whole CHECK_INTERVAL batch (terms may be in different lines).
# Leave empty to disable include filter (all logs pass and any non-empty batch can trigger send)
SEND_INCLUDE_GROUPS_1=killed by Player,raid+base,helicrash
RAW_WEBHOOK_URL_1=https://your-webhook.example/raw-path-1

# Server 2 (required)
LOGS_HOST_PATH_2=/var/lib/pterodactyl/volumes/<server-2-uuid>/profiles
WEBHOOK_URL_2=https://your-webhook.example/path-2
SOURCE_NAME_2=namalsk
CHECK_INTERVAL_2=30
QUIET_HOURS_RANGE_2=1-6
SEND_INCLUDE_GROUPS_2=killed by Player,raid+base,helicrash
RAW_WEBHOOK_URL_2=https://your-webhook.example/raw-path-2

# Server test (required if enabled in compose)
LOGS_HOST_PATH_TEST=/var/lib/pterodactyl/volumes/<test-server-uuid>/profiles
WEBHOOK_URL_TEST=https://your-webhook.example/path-test
SOURCE_NAME_TEST=test
CHECK_INTERVAL_TEST=30
QUIET_HOURS_RANGE_TEST=1-6
SEND_INCLUDE_GROUPS_TEST=killed by Player,raid+base,helicrash
RAW_WEBHOOK_URL_TEST=https://your-webhook.example/raw-path-test

# Server test 2 (required if enabled in compose)
LOGS_HOST_PATH_TEST_2=/var/lib/pterodactyl/volumes/<test2-server-uuid>/profiles
WEBHOOK_URL_TEST_2=https://your-webhook.example/path-test-2
SOURCE_NAME_TEST_2=test2
CHECK_INTERVAL_TEST_2=30
QUIET_HOURS_RANGE_TEST_2=1-6
SEND_INCLUDE_GROUPS_TEST_2=killed by Player,raid+base,helicrash
RAW_WEBHOOK_URL_TEST_2=https://your-webhook.example/raw-path-test-2

# Shared optional tuning
# Container timezone for quiet-hours and timestamps (set to server timezone, e.g. Europe/Moscow)
TZ=Etc/UTC
# Optional required tokens for RAW_WEBHOOK_URL stream (legacy var name), comma-separated.
# A raw line is sent only if it contains at least one token from defaults in code
# (DEFAULT_RAW_EXCLUDE_SUBSTRINGS) or from this variable.
RAW_FILTER_EXCLUDE_SUBSTRINGS=killed by Player,hit by,committed suicide
# While trigger=0 and SLEEPY=false, batch lines older than this value are pruned
ROTATE_MINUTES=60
# JSON file with player ID -> name mapping (inside container path)
PLAYERS_DB_FILE=/state/players.json
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRIES=3
WEBHOOK_RETRY_BACKOFF=2
# Optional additional filter tokens, comma-separated
FILTER_EXCLUDE_SUBSTRINGS=Trader,SafeZone,global chat
